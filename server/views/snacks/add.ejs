<!--Content for the add page-->
<div class="container">
  <div class="row"
    <div class="col-md-offset-3 col-md-6">
       <h1><%= title %></h1>
       <form class="form" method = 'post'>

         
        <div class="form-group">
          <label for="nameTextField">Snack Name</label>
          <input type="text"class="form-control"
          id="nameTextField"
          placeholder="Enter the name of the snack"
          name="name" required>
        </div>

        <div class="form-group">
          <label for="producerTextField">producer</label>
          <input type="text"class="form-control"
          id="producerTextField"
          placeholder="Enter the producer of the snack"
          name="producer" required>
        </div>

        <div class="form-group">
          <label for="FoundedTextField">Founded</label>
          <input type="text"class="form-control"
          id="FoundedTextField"
          placeholder="Enter the date when it was founded"
          name="Founded" required>
        </div>

        <div class="form-group">
          <label for="descriptionTextField">description</label>
          <textarea type="text"class="form-control">
          id="descriptionTextField"
          placeholder="Enter the description of snack"
          name="description" required></textarea>
        </div>

        <div class="form-group">
          <label for="priceTextField">price</label>
          <input type="number"class="form-control"
          id="priceTextField"
          placeholder="Enter the name of the snack"
          name="price" required>
        </div>

        <button class="btn-btn-primary" type="submit">
            <i class="fas fa-edit"></i> Submit

        </button>

        <a href="/snacks-list" class="btn btn-warning"
          <i class="fas fa-undo"></i>Cancel</a>
      </form>

   </div>

  </div>
  
